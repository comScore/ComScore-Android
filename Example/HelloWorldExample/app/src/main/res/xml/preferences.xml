<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="comScore"
        android:key="pref_key_storage_settings">

        <CheckBoxPreference
            android:key="pref_tracking_disable"
            android:title="Disable usage reporting"
            android:summary="Disable anonymous usage data to be sent."
            android:defaultValue="false" />
        <Preference
            android:key="pref_comscore_version"
            android:selectable="false"
            android:persistent="false"
            android:title="Version"
            android:summary="1.0.0"/>
    </PreferenceCategory>
</PreferenceScreen>
